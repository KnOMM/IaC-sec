acl corpnets {
  {%- for ip in alips %}
    {{ip}};
  {%- endfor %}
};

options {
        directory "/var/lib/bind";

        forwarders {
          {%- for ip in dnsips %}
          {{ip}};
          {%- endfor %}
         };

        allow-query { corpnets; };        

        dnssec-validation no;
};

statistics-channels {
  inet 127.0.0.1 port 8053 allow {127.0.0.1;};
};
